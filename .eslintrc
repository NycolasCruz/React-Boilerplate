{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:react/recommended",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "@typescript-eslint"],
	"rules": { "react/react-in-jsx-scope": "off" },
	"overrides": [
		{
			"files": ["**/@types/**/*"],
			"rules": { "@typescript-eslint/no-unused-vars": "off" }
		}
	]
}
